generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model TestResult {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  // 테스트 결과 - 메인 데이터
  runnerType String // 'slow', 'marathoner', 'trail', 'crew', 'style', 'race'

  // 사용자 답변 (JSON)
  answers String

  // 각 타입별 점수 - 통계 페이지용
  slowScore       Int @default(0) // 슬로우 러너 
  marathonerScore Int @default(0) // 마라토너 
  trailScore      Int @default(0) // 트레일 러너 
  crewScore       Int @default(0) // 크루 러너 
  styleScore      Int @default(0) // 패션 러너 
  raceScore       Int @default(0) // 레이스 헌터 

  @@map("test_results")
}
